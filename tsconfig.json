{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"module": "preserve",
		"noEmit": true,
		"noImplicitOverride": true,
		"lib": ["es2022"],
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["vitest/globals"]
	}
}
